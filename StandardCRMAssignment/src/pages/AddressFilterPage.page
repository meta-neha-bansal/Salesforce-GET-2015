<apex:page standardController="account" extensions="AddressFilterWithPagination"> 
    
  <apex:form >  
      <apex:pageBlock >
           <apex:pageBlockSection >
          <apex:inputText value="{!BillingCity}" label="Billing City"/> 
          <apex:inputText value="{!BillingState}" label="Billing State"/>
          <apex:inputText value="{!BillingCountry}" label="Billing Country"/> 
      </apex:pageBlockSection>
      </apex:pageBlock>
     
      
      <apex:commandButton value="Search records" action="{!search}"/>  
      <apex:commandButton value="Clear records" action="{!search}"/>  
      
       <apex:pageBlock title="Search Result" >  
        <apex:pageblockTable value="{!accountList}" var="a" id="details">  
         <apex:column >  
          <apex:outputlink value="https://ap1.salesforce.com/{!a.id}">{!a.Name}</apex:outputlink>  
         </apex:column>  
         <apex:column value="{!a.id}">  </apex:column>
        </apex:pageBlockTable>   
           
        <apex:pageblockButtons >
        <apex:commandButton value="First Page" rerender="details" action="{!FirstPage}" disabled="{!prev}"/>
        <apex:commandButton value="Previous" rerender="details" action="{!previous}" disabled="{!prev}"/>
        <apex:commandButton value="Next" rerender="details" action="{!next}" disabled="{!nxt}"/>
        <apex:commandButton value="Last Page" rerender="details" action="{!LastPage}" disabled="{!nxt}" />
        </apex:pageblockButtons>
       </apex:pageBlock>   
  </apex:form>  
 </apex:page>